{% extends 'base.html.twig' %}

{% block title %}TODO LIST{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <header>
                <h2>To Do List</h2>
              </header>
        </div>
        <div id="content">
        
            <button id="add" class="btn btn-success btn-lg" data-toggle="modal" data-target="#modalForm">Añadir tarea</button>

            <div class="modal fade" id="modalForm" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">
                                <span aria-hidden="true">×</span>
                                <span class="sr-only">Close</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Añadir</h4>
                        </div>
                        
                        <div class="modal-body">
                            <p class="statusMsg"></p>
                            <form role="form" action="">
                                <div class="form-group">
                                    <label for="nombre">Nombre de la tarea</label>
                                    <input type="text" class="form-control" id="nombre"/>
                                </div>

                                <div class="form-group">
                                    <label for="fecha_tope">Fecha tope para realizarla</label>
                                    <input type="date" class="form-control" id="fecha_tope"></input>
                                </div>
                            </form>
                        </div>
                        

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary submitBtn" onclick="addTodo()">Añadir</button>
                        </div>
                    </div>
                </div>
            </div>    
                
            <table id="table" class="display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre de la tarea</th>
                        <th>Fecha de creación</th>
                        <th>Fecha tope</th>
                        <th>Estado</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in result %}
                        <tr>
                            <td> {{item.id}} </td>
                            <td> {{item.nombre}} </td>
                            <td> {{item.fechaCreacion|date("d/m/Y") }} </td>
                            <td> {{item.fechaTope|date("d/m/Y") }} </td>
                            <td> {{item.estado == false ? 'Sin hacer' : 'Hecho' }} </td>
                            <td>   
                                <button type="button">Hecho</button>  
                                <button type="button">Eliminar</button> 
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
           
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

        body {
            margin: 0;
            padding: 0;
        }

        header {
            background-color: rgb(158, 190, 250);
            padding: 30px;
            text-align: center;
            font-size: 35px;
            color: white;
        }

        #content {
            margin: 5px;
        }
        
        #add {
            margin-bottom: 10px;
        }
    </style>
 {% endblock %}

 {% block javascripts %}
    <script>
        $( document ).ready(function() {
     
            $('#table').DataTable( {
                "columnDefs": [
                    {
                        "className": "dt-center", 
                        "targets": "_all"},
                    {
                        "targets": [ 0 ],
                        "visible": false
                    }
                ],
                "ordering": false,
                responsive: true,
                "scrollX": true
            });
            
            var today = new Date();
            var dd = today.getDate();
            var mm = today.getMonth()+1; 
            var yyyy = today.getFullYear();
            if(dd<10){
                dd='0'+dd
            } 
            if(mm<10){
                mm='0'+mm
            } 
            
            today = yyyy+'-'+mm+'-'+dd;
            console.log(today);
            document.getElementById("fecha_tope").setAttribute("min", today);


            $('#add').on('click', function() {
                $("#nombre").val("");
                $("#fecha_tope").val("");

            }) 
        });

    </script>
{% endblock %}
